@model HelpMoto.Web.Models.HistoryViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>History</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddHistory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MotorcycleId" />

            <div class="form-group">
                <label asp-for="InicialDate" class="control-label"></label>
                <input asp-for="InicialDate" class="form-control" />
                <span asp-validation-for="InicialDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinalDate" class="control-label"></label>
                <input asp-for="FinalDate" class="form-control" />
                <span asp-validation-for="FinalDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkshopTypeId" class="control-label"></label>
                <select asp-for="WorkshopTypeId" asp-items="Model.WorkshopTypes" class="form-control"></select>
                <span asp-validation-for="WorkshopTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <textarea asp-for="Remarks" class="form-control"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.MotorcycleId" class="btn btn-success">Back to Motorcycle</a>
            </div>
        </form>
    </div>
</div>