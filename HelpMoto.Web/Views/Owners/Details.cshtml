@model HelpMoto.Web.Data.Entities.Owner

@{
    ViewData["Title"] = "Details";
}

<h2>Owner</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
        <dt>
            @Html.DisplayNameFor(model => model.User.Document)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Document)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt>
            # Motorcycles
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Motorcycles.Count)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Edit</a> |
    <a asp-action="AddMotorcycle" asp-route-id="@Model.id" class="btn btn-primary">Add Motorcycle</a>
    <a asp-action="Index" class="btn btn-success"> Back to List</a>
</div>
@if (Model.Motorcycles.Count == 0)
{
<h4>Not Motorcycle added yet.</h4>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Motorcycles.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorcycles.FirstOrDefault().Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorcycles.FirstOrDefault().MotorcycleType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorcycles.FirstOrDefault().ShopLocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motorcycles.FirstOrDefault().Remarks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Motorcycles)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotorcycleType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShopLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                <a asp-action="EditMotorcycle" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                <a asp-action="DetailsMotorcycle" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                <a asp-action="DeleteMotorcycle" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
}